<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/registrForm.css" />
    <link rel="stylesheet" href="/stylesheets/header.css" />
  </head>
  <body>
    <%- include('./parts/header.ejs') %>
    <div class="wrapper">
      <main class="page">
        <div class="page__container">
          <form
            action="/registration<%= user?.id ? '/' + user.id : '' %>"
            method="POST"
            class="page__form form"
          >
            <div class="form__title">
              <h3>Registration Form</h3>
              <% if(errors?.length > 0) { %>
                <ul class="error-box">
                  <% errors.forEach(function(error) { %>
                  <li class="error-message"><%= error.msg %></li>
                  <% }) %>
                </ul>
              <% } %>
            </div>
            <label for="name" class="form__label"
              >Please your Name
              <input
                type="text"
                name="name"
                id=""
                placeholder="Name"
                required
                value="<%= user?.name %>"
              />
            </label>
            <label for="surname" class="form__label"
              >Please enter your Surname
              <input
                type="text"
                name="surname"
                id=""
                placeholder="Surname"
                required
                value="<%= user?.surname %>"
              />
            </label>
            <label for="age" class="form__label"
              >PLease enter your Age
              <input
                type="number"
                name="age"
                id=""
                placeholder="Age"
                required
                value="<%= user?.age %>"
              />
            </label>
            <label for="email" class="form__label"
              >Please enter your E-mail
              <input
                type="text"
                name="email"
                id=""
                placeholder="E-mail"
                required
                value="<%= user?.email %>"
              />
            </label>

            <button type="submit" class="form__btn">
              <%= user && user.id ? 'Edit User' : 'Add User' %>
            </button>
          </form>
        </div>
      </main>
    </div>
    <script src="/javascripts/script.js"></script>
  </body>
</html>
